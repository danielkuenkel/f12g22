<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".SearchEventActivity" >

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/seachByZip_editText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.90"
            android:ems="10"
            android:hint="@string/searchByZip_editText"
            android:inputType="number" />

        <Button
            android:id="@+id/serachByZip_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchByZip_button" />
    </LinearLayout>

    

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="563dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/layoutSearch"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/serach_listView"
                android:layout_width="fill_parent"
                android:layout_height="424dp" >
            </ListView>
        </LinearLayout>


</RelativeLayout>